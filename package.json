{
  "name": "quiz-room",
  "version": "1.0.0",
  "scripts": {
    "start": "babel-node src/run.js",
    "dev": "babel-node src/run.js",
    "devstart": "nodemon --watch src --exec babel-node src/run.js",
    "test": "node before.test.js && npm run mockdb && npm run nyc && node cucumber.report.js",
    "nyc": "nyc cucumber-js __tests__ --format=json >> cucumber.json",
    "cucumber": "node before.test.js && npm run mockdb && cucumber-js --require-module babel-register --require-module babel-polyfill __tests__",
    "lint": "eslint -c .eslintrc . --ignore-path .eslintignore",
    "migrate": "sequelize db:migrate --config=./src/infra/config.js --options-path=./src/infra/options.json",
    "migrate:undo": "sequelize db:migrate:undo:all --config=./src/infra/config.js --options-path=./src/infra/options.json",
    "seeders": "sequelize db:seed:all --config=./src/infra/config.js --options-path=./src/infra/options.json",
    "mockdb": "npm run migrate && npm run seeders",
    "restoredb": "node before.test.js && npm run migrate && npm run seeders"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "cucumber": "^4.2.1",
    "cucumber-html": "^0.2.4",
    "cucumber-html-reporter": "^4.0.2",
    "cucumber-junit": "^1.7.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "istanbul": "^0.4.5",
    "nodemon": "^1.17.4",
    "nyc": "^11.7.1",
    "rimraf": "^2.6.2",
    "sqlite3": "^4.0.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "global": "^4.3.2",
    "jsonwebtoken": "^8.2.1",
    "morgan": "^1.9.0",
    "pg": "^7.4.3",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0",
    "sha1": "^1.1.1",
    "socket.io": "^2.1.1"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 50,
    "statements": 50,
    "functions": 50,
    "branches": 50,
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "exclude": [
      "src/helpers/error.js",
      "src/auth/auth.js",
      "src/server.js"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "report-dir": "./.test_output/coverage"
  }
}
